<div class="itiran">
   <h3>イベント一覧</h3>
</div>

<div class="body">
<% @ivents.each do |ivent| %>
<div class="ivent-box">
<div class="ivent-image" style="background-image:url(<%= ivent.image %>)"></div>
<div class="ivent-outline">
<div class="box">
<div class="title"></div>
<div class="content"><%= ivent.ivent_name %></div>
</div>
<div class="box">
<div class="title">日　時　：</div>
<div class="title"><%= ivent.start_day %>~<%= ivent.end_day %></div>
</div>
<div class="box">
<div class="title">場　所　：</div>
<div class="title"><%= ivent.place %></div>
</div>
<div class="more">
   <li>
   <%= link_to '詳しく見る', "/ivents/#{ivent.id}", class: 'post', method: :get %>
  </li></div>

</div>

</div>

<% end %>
<div class="itiran">
<%= paginate(@ivents) %>
</div>
</div>


