<div class="ivents_new">
  <%= form_tag('/ivents', method: :post) do %>
    <h3>
      イベントを投稿する
    </h3>
    <input type="text" name="ivent_name" placeholder="イベント名">
    <input type="text" name="owner_name" placeholder="主催者名">
    <input type="text" name="place" placeholder="開催地">
    <input type="date" name="start_day" placeholder="開催日">
    <input type="date" name="end_day" placeholder="開催日">
    <input type="image" name="image" placeholder="ポスター画像">
    <textarea name="text" placeholder="text" rows="10" cols="30"></textarea>
    <input type="submit" value="SEND">
  <% end %>
</div>